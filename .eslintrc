{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "useJSXTextNode": true,
    "project": "./tsconfig.json"
  },
  "extends": "standard",
  "plugins": [
    "@typescript-eslint",
    "react",
    "react-hooks",
    "jsx-a11y"
  ],
  "rules": {
    "eqeqeq": "error",
    "no-eval": "error",
    "no-var": "error",
    "prefer-const": "error",
    "sort-imports": "warn",
    "no-unused-vars": "off",
    "no-unused-expressions": "warn",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    ],
    "import/prefer-default-export": "off",
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "camelcase": "off"
  },
  "globals": {
    "fetch": true,
    "DEBUG": true
  },
  "env": {
    "jest": true,
    "browser": true
  }
}
